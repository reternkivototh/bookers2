<h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block rounded" do %>
    <i class="fas fa-user-cog list-inline m-2 d-flex justify-content-center"></i>
  <% end %>

