<head>
  <% if @book.errors.any? %>
    <div>
      <div>
        <%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:
      </div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</head>


<body>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto p-3">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="my-1">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputName", class: "form-control input-sm" %>
        </div>
        <div class="my-3">
          <label for="inputBody">Opinion</label>
          <%= f.text_field :body, autofocus: true, id:"inputIntroduction", class: "form-control " %>
        </div>
        <div class="my-3">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
        <div class="my-3">
          <%= link_to 'Show', book_path(@book.id) %>
          <span>|</span>
          <%= link_to 'Back', books_path %>
        </div>
    </div>
  </div>
</div>
</body>


