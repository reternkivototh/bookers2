<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
<div>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル" %>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :opinion, autofocus: true, id:"inputOpinion", placeholder:"感想" %>
  <%= f.submit "Update Book" %>
</div>
<% end %>


<div>
<%= link_to 'Show', book_path(@book.id) %>
<span>|</span>
<%= link_to 'Back', books_path %>
</div>