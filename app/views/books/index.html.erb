<head>
  <% if @book.errors.any? %>
    <div>
      <%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
</head>

<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100, 100) %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>

        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block rounded" do %>
          <i class="fas fa-user-cog list-inline m-2 d-flex justify-content-center"></i>
        <% end %>
        <%= render '/users/creation', book: @book %>
      </div>


<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(80, 80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



