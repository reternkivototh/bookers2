
<%= render 'books/profile', user: @user %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(current_user.id) do %>
    <p><%= image_tag book.get_image %></p>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p>Title: <%= book.title %></p>
  <% end %>
  <p>Opinion: <%= book.body %></p>
</div>
<% end %>

<%= render 'users/creation', book: @book %>
