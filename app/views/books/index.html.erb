

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(current_user.id) do %>
    <p><%= image_tag book.get_image %></p>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p>Title: <%= book.title %></p>
  <% end %>
  <p>Opinion: <%= book.body %></p>
</div>
<% end %>


<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book'%>
  <% end %>