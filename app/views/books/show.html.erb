<div>
  <%= flash[:notice] %>
</div>

<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_image %>
  <%= link_to user_path(current_user.id) do %>
    <p><%= @book.user.name %></p>
  <% end %>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book'%>
  <% end %>