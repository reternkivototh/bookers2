<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/profile', user: @user %>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @newbook do |f| %>
          <div class="form-group">
            <h4>Title</h4>
              <%= f.text_field :title, :class => "w-260px"%>
            <h4>Opinion</h4>
              <%= f.text_area :body, :class => "w-260px"%>
              <%= f.submit "Create Book", class: "follow_submit" %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @user.get_profile_image(100, 100) %>
                <span class="d-block">
                  <%= @book.user.name %>
                </span>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
             <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
             <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm" %></td>
             <% end %>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>