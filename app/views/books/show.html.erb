<h3>Book detail</h3>



<div>
  <%= image_tag @book.get_image %>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <%= @book.user.name %>
  <p><%= @book.title %></p>
  <p><%= @book.opinion %></p>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>