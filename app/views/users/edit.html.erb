<head>
  <% if @user.errors.any? %>
  <div>
    <div>
      <%= pluralize(@user.errors.count, "error") %>  prohibited this obj from being saved:
    </div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</head>

<body>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto p-3">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="my-1">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control input-sm" %>
        </div>
        <div class="my-3">
          <label for="inputImage">Image</label></br>
          <%= f.file_field :profile_image, accept: "image/*", class: "type file" %>
        </div>
        <div class="my-1">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class: "form-control " %>
        </div>
        <div class="my-3">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>